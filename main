<script>
        function pic1()
        {
            document.getElementById("img").src = "https://andrewswxcenter.com/images/all_met_schools.png";
        }
        function pic2()
        {
            document.getElementById("img").src ="https://andrewswxcenter.com/images/undergraduate_graduate_met_schools.png";
        } 
        function pic3()
        {
            document.getElementById("img").src = "https://andrewswxcenter.com/images/undergraduate_only_met_schools.png";
        }
        function pic4()
        {
            document.getElementById("img").src = "https://andrewswxcenter.com/images/graduate_only_met_schools.png";
        }
        function pic5()
        {
            document.getElementById("img").src = "";
        }

</script>




<input type="button" value="All Universities containing a Meteorology program" onclick="pic1()"/> 
<input type="button" value="Both Undergraduate and Graduate" onclick="pic2()"/>
